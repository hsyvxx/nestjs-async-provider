{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/nestjs-async-transform": ["libs/nestjs-async-transform/src"],
      "@app/nestjs-async-transform/*": ["libs/nestjs-async-transform/src/*"]
    },
    "lib": ["ES2020"]
  }
}
